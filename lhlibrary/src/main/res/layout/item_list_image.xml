<?xml version="1.0" encoding="utf-8"?>
<com.lh.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:oscAccordTo="width">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dadada"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:scaleType="centerInside" />

    <View
        android:id="@+id/lay_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_80"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cb_selected"
        android:layout_width="@dimen/line20"
        android:layout_height="@dimen/line20"
        android:layout_gravity="top|right"
        android:layout_margin="4dp"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/pictures_select_icon" />

    <ImageView
        android:id="@+id/iv_is_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_flag_gif"
        android:visibility="gone" />
</com.lh.view.SquareLayout>